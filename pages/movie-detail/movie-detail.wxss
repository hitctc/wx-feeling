/* pages/movie-detail/movie-detail.less */
.movie-detail-page {
  width: 750rpx;
  min-height: 100vh;
}
.movie-detail-page .head-banner {
  width: 750rpx;
}
.movie-detail-page .head-banner .banner-pic {
  width: 750rpx;
}
.movie-detail-page .body-container {
  width: 700rpx;
  margin: 20rpx auto 0;
}
.movie-detail-page .body-container .desc .title,
.movie-detail-page .body-container .link .title,
.movie-detail-page .body-container .code .title {
  width: 700rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #000000;
  font-weight: bold;
}
.movie-detail-page .body-container .desc .content,
.movie-detail-page .body-container .link .content,
.movie-detail-page .body-container .code .content {
  width: 700rpx;
  font-size: 28rpx;
  color: #999999;
}
.movie-detail-page .body-container .desc .content .copy,
.movie-detail-page .body-container .link .content .copy,
.movie-detail-page .body-container .code .content .copy {
  font-size: 25rpx;
  color: #445566;
  font-size: 500;
}
.movie-detail-page .bottom-footer {
  z-index: 999;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  background-color: rgba(0, 0, 0, 0.2);
  box-shadow: 0 0 10rpx #dadada;
  color: #8999a0;
}
