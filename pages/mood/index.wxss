/* pages/mood/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  position: relative;
}

.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.main {
  width: 100%;
  height: 100%;
  padding: 0 0 80rpx 0;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #c4c4c4;
  background-color: rgb(68, 85, 102);
}