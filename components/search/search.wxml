<view class="container">
  <view class="header">
    <view class="search-container">
      <image class="icon" src="images/search.png" />
      <input value="{{q}}" bind:confirm="onConfirm" placeholder-class='in-bar' placeholder='书籍名' class='bar' auto-focus="true" />
      <image bind:tap="onDelete" class="cancel-img" src="images/cancel.png" />
    </view>
    <view bind:tap="onCancel" class='cancel'>取消</view>
  </view>

  <view wx:if="{{!searching}}">
    <view class="history">
      <view class="title">
        <view class="chunk"></view>
        <text>历史搜索</text>
      </view>
      <view class="tags">
        <block wx:for="{{historyWords}}" wx:key="historyWords">
          <v-tag bind:tapping="onConfirm" text="{{item}}" />
        </block>
      </view>
    </view>
    <view class="history hot-search">
      <view class="title">
        <view class="chunk"></view>
        <text>热门搜索</text>
      </view>
      <view class="tags">
        <block wx:for="{{hotWords}}" wx:key="hotWords">
          <v-tag bind:tapping="onConfirm" text="{{item}}" />
        </block>
      </view>
    </view>
  </view>

  <view wx:if="{{searching}}" class="books-container">
    <block wx:for="{{dataArr}}" wx:key="item">
      <hc-book book="{{item}}"></hc-book>
    </block>
  </view>

  <hc-loading class="loading-center" wx:if="{{loadingCenter}}"></hc-loading>
  <hc-loading class="loading" wx:if="{{loadingBottom}}"></hc-loading>

  <text class="empty-tip" wx:if="{{noneRes}}">没有相关书籍</text>
</view>