<!--components/classic/music/music.wxml-->
<view
  class="container"
  hidden="{{hidden}}">
  <image
    class="classic-img {{playing?'rotation':''}}"
    src="{{img}}" />
  <image
    class="player-img"
    src="{{playing?pauseSrc:playSrc}}"
    bind:tap="onPlay" />
  <image
    class="tag"
    src="./images/music@tag.png" />
  <text class="content">
    {{desc}}
  </text>
</view>
