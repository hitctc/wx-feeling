/* components/index/nav-tab/nav-tab.less */
.sidebar-c {
  /*noinspection CssInvalidPropertyValue*/
  width: 100%;
  background-color: #fff;
  min-height: 100vh;
}

.sidebar-box {
  width: 100%;
  max-height: 100vh;
  overflow-y: auto;
}

.sidebar-box .item {
  box-sizing: border-box;

  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  text-align: center;
  border-left: 4rpx solid #fff;
  border-right: 4rpx solid #fff;

  overflow: hidden;
}

.sidebar-box .item.active {
  background-color: #f8f8f8;
  border-left: 4rpx solid red;
  border-right: 4rpx solid #f8f8f8;
}