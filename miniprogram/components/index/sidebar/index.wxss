/* components/index/nav-tab/nav-tab.less */
.sidebar-c {
  /*noinspection CssInvalidPropertyValue*/
  width: 100%;
  background-color: rgba(255, 255, 255, 0.5);
  min-height: 100vh;
  border-radius: 10rpx;
}

.sidebar-box {
  width: 100%;
  max-height: 100vh;
  overflow-y: auto;
  border-radius: 10rpx;
}

.sidebar-box .item {
  box-sizing: border-box;

  width: calc(100% - 30rpx);
  height: 80rpx;
  line-height: 80rpx;
  background-color: transparent;
  text-align: center;
  /* border-left: 8rpx solid #fff; */
  /* border-right: 4rpx solid #fff; */

  overflow: hidden;
  margin: 0 15rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.sidebar-box .item.active {
  background-color: rgba(248, 248, 248, 0.8);
  border-left: 10rpx solid #6CFFE0;
  border-right: 10rpx solid #6CFFE0;
}