/* components/index/nav-tab/nav-tab.less */
.card-list-c {
  /*noinspection CssInvalidPropertyValue*/
  width: 100%;
  height: calc(100vh - 80rpx);
  margin: 80rpx 0 0 0;

  position: relative;
}

.card-list-c .status-show-styl {
  width: 100%;
  height: calc(100vh - 80rpx);

  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card-list-c .desc-styl {
  text-align: center;
  padding: 0 30rpx;
  line-height: 1.8;
}

.card-list-scroll-view {
  height: calc(100vh - 80rpx);
  overflow-y: auto;
}

.card-list-box {
  width: 100%;
}

.card-list-box .item {
  box-sizing: border-box;

  width: cacl(100% - 50rpx);
  padding: 40rpx 30rpx;
  margin: 0 25rpx 25rpx 25rpx;
  border-radius: 10rpx;
  /* background-color: rgba(184, 184, 184, 0.23); */
  background-color: rgb(255, 255, 255);
  box-shadow: 0px 4rpx 10rpx 0px rgba(0, 0, 0, 0.23);

  display: flex;
  justify-content: center;
  align-items: center;

  position: relative;
  white-space: normal;
  word-break: break-all;
}

.card-list-box .item .jump-detail-btn {
  z-index: 99;
  position: absolute;
  bottom: 0;
  right: 0;

  padding: 0 10rpx;
  margin: 0;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
}

.card-list-box .item .tag-text {
  z-index: 98;
  position: absolute;
  bottom: 0;
  left: 30rpx;

  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  width: 80%;
  margin: 0;
  color: #aaaaaa;

}

.card-list-box .item .copy-count {
  z-index: 99;
  position: absolute;
  top: 0;
  left: 30rpx;
  font-size: 20rpx;
  color: #aaaaaa;
}

.item .tip {
  position: absolute;
  top: 0;
  right: 0;
  border-top-right-radius: 10rpx;
  background-color: red;
  font-size: 22rpx;
  font-style: oblique;
  padding: 0rpx 8rpx;
  color: #f8f8f8;
  opacity: 0.7;
}

.card-list-c .loading-c {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}