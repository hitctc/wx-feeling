.container {
  width: 100%;
  height: 100%;
  min-height: 100vh;
  background-color: #F8F8F8;

  position: relative;

  box-sizing: border-box;
  padding-top: 20rpx;
}

.container .main {
  box-sizing: border-box;
  width: 100%;
  padding: 0 32rpx 20rpx 32rpx;

  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.main .shadow-styl {
  width: 328rpx;
  height: 100rpx;
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.4);
  border-radius: 20rpx;

  box-sizing: border-box;
  display: flex;
  align-items: center;
  /* box-shadow: 0px 1px 4px #203A43, 0px 0px 20px #2C5364 inset; */
  margin-bottom: 32rpx;
}

.main .shadow-styl:nth-of-type(2n+2) {
  background: #FFFFFF;
}

.main .shadow-styl:nth-of-type(2n+1) {
  margin-right: 30rpx;
  background: #FFFFFF;
}

.main .shadow-styl .btn-styl {
  width: 275rpx;
  height: 70rpx;
  line-height: 70rpx;
  box-shadow: 0rpx 0rpx 10rpx 10rpx rgb(136, 136, 136);
  border-radius: 16rpx;
  font-weight: bold;

  font-size: 32rpx;
  border: none;
  background-color: transparent;
  color: #071529;

}

.container .zs-pic-box {
  position: absolute;
  top: 0;
  left: 0;

  width: 750rpx;
  height: 100vh;
  background-color: rgba(17, 17, 17, 0.4);
}

.zs-pic-box .zs-pic {
  position: absolute;

  width: 680rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.zs-pic-box .close-btn {
  position: absolute;
  top: 30rpx;
  right: 40rpx;
}