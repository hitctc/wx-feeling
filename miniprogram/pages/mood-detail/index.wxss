/* pages/mood-detail/index.wxss */

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}

.header {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.date {
  width: auto;
}

.date .years {
  font-size: 28rpx;
}

.date .no {
  font-size: 28rpx;
}

.date .day {
  font-size: 44rpx;
  font-weight: bold;
}

.share-button {
  flex: 1;
  display: inline-block;
  outline: none;
  background-color: #fff !important;
  padding: 0;
  text-align: right;
}
.share-icon {
  padding: 0 8rpx;
}

.moodkey {
  display: block;
  margin: 0 20rpx;
  text-align: left;
  color: rgb(150, 150, 150);
}

.mooddesc {
  display: block;
  margin: 20rpx;
  text-align: left;
  color: rgb(150, 150, 150);
}

.image {
  /* flex: 1; */
  width: 100%;
  height: 100%;
}

/* page相关 */
.page-section {
  width: 100%;
  height: 100%;
}

.page-section-spacing {
  box-sizing: border-box;
}

.swiper .seiper-area {
  height: 100%;
}

.swiper-item {
  display: block;
  height: 100%;
}