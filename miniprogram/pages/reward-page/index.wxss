/* pages/tcq-index/index.wxss */

.reward-index {
  width: 750rpx;
  height: 100vh;

  flex-direction: column;
  display: flex;
  justify-content: flex-start;
  align-items: center;

  position: relative;
}

.reward-index .copy-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 680rpx;
  padding: 30rpx;
  margin: 16rpx 0;
  box-sizing: border-box;
  box-shadow: 0rpx 0rpx 10rpx #999999;
  border-radius: 10rpx;

  line-height: 1.8;
}

.copy-box .high-text {
  color: #5DB0D7;
}

.reward-index .gzh-text {
  font-weight: bold;
  color: #5DB0D7;
}


.reward-index .advise-btn-box {
  width: 680rpx;
  line-height: 1.8;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;

  padding: 10rpx;
  padding: 30rpx;
  margin: 16rpx 0;
  box-sizing: border-box;
  box-shadow: 0rpx 0rpx 10rpx #999999;
}

.reward-index .zs-pic-box {
  position: absolute;

  width: 750rpx;
  height: 100vh;
  background-color: rgba(17, 17, 17, 0.4);
}

.zs-pic-box .zs-pic {
  position: absolute;

  width: 680rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.zs-pic-box .close-btn {
  position: absolute;
  top: 30rpx;
  right: 40rpx;
}
