    <!-- 资源链接 -->
    <!-- 百度网盘 -->
    <view class="type">
      <view class="type-title">默认：百度网盘</view>
      <van-cell-group custom-class="field-styl">
        <van-field model:value="{{ sourceName1 }}" clickable label="名称" placeholder="{{sourceName1}}" type="textarea"
          autosize title-width='60px' data-name="name" type="textarea" autosize />
        <van-field model:value="{{ sourceBdLinkAll }}" clickable label="完整链接" placeholder="{{sourceBdLinkAll}}"
          title-width='60px' data-name="intactLink" type="textarea" autosize />
        <van-field model:value="{{ sourceBdLink }}" clickable label="链接" placeholder="{{sourceBdLink}}"
          title-width='60px' data-name="link" type="textarea" autosize />
        <van-field model:value="{{ sourceBdCode }}" clickable label="码" placeholder="{{sourceBdCode}}"
          title-width='60px' data-name="code" type="textarea" autosize />
      </van-cell-group>
    </view>

    <!-- 迅雷云盘 -->
    <view class="type">
      <view class="type-title">默认：迅雷云盘</view>
      <van-cell-group custom-class="field-styl">
        <van-field model:value="{{ sourceName2 }}" clickable label="名称" placeholder="{{sourceName2}}" type="textarea"
          autosize title-width='60px' data-name="name" type="textarea" autosize />
        <van-field model:value="{{ sourceXlLinkAll }}" clickable label="完整链接" placeholder="{{sourceXlLinkAll}}"
          title-width='60px' data-name="intactLink" type="textarea" autosize />
        <van-field model:value="{{ sourceXlLink }}" clickable label="链接" placeholder="{{sourceXlLink}}"
          title-width='60px' data-name="link" type="textarea" autosize />
        <van-field model:value="{{ sourceXlCode }}" clickable label="码" placeholder="{{sourceXlCode}}"
          title-width='60px' data-name="code" type="textarea" autosize />
      </van-cell-group>
    </view>

    <!-- 阿里网盘 -->
    <view class="type">
      <view class="type-title">默认：阿里网盘</view>
      <van-cell-group custom-class="field-styl">
        <van-field model:value="{{ sourceName3 }}" clickable label="名称" placeholder="{{sourceName3}}" type="textarea"
          autosize title-width='60px' data-name="name" type="textarea" autosize />
        <van-field model:value="{{ sourceAlLinkAll }}" clickable label="完整链接" placeholder="{{sourceAlLinkAll}}"
          title-width='60px' data-name="intactLink" type="textarea" autosize />
        <van-field model:value="{{ sourceAlLink }}" clickable label="链接" placeholder="{{sourceAlLink}}"
          title-width='60px' data-name="link" type="textarea" autosize />
        <van-field model:value="{{ sourceAlCode }}" clickable label="码" placeholder="{{sourceAlCode}}"
          title-width='60px' data-name="code" type="textarea" autosize />
      </van-cell-group>
    </view>

    <!-- 磁力链接 -->
    <view class="type">
      <view class="type-title">默认：磁力链接</view>
      <van-cell-group custom-class="field-styl">
        <van-field model:value="{{ sourceName4 }}" clickable label="名称" placeholder="{{sourceName4}}" type="textarea"
          autosize title-width='60px' data-name="name" type="textarea" autosize />
        <van-field model:value="{{ sourceClLinkAll }}" clickable label="完整链接" placeholder="{{sourceClLinkAll}}"
          title-width='60px' data-name="intactLink" type="textarea" autosize />
        <van-field model:value="{{ sourceClLink }}" clickable label="链接" placeholder="{{sourceClLink}}"
          title-width='60px' data-name="link" type="textarea" autosize />
        <van-field model:value="{{ sourceClCode }}" clickable label="码" placeholder="{{sourceClCode}}"
          title-width='60px' data-name="code" type="textarea" autosize />
      </van-cell-group>
    </view>

    <!-- 其它链接 -->
    <view class="type">
      <view class="type-title">默认：其它链接</view>
      <van-cell-group custom-class="field-styl">
        <van-field model:value="{{ sourceName5 }}" clickable label="名称" placeholder="{{sourceName5}}" type="textarea"
          autosize title-width='60px' data-name="name" type="textarea" autosize />
        <van-field model:value="{{ sourceQtLinkAll }}" clickable label="完整链接" placeholder="{{sourceQtLinkAll}}"
          title-width='60px' data-name="intactLink" type="textarea" autosize />
        <van-field model:value="{{ sourceQtLink }}" clickable label="链接" placeholder="{{sourceQtLink}}"
          title-width='60px' data-name="link" type="textarea" autosize />
        <van-field model:value="{{ sourceQtCode }}" clickable label="码" placeholder="{{sourceQtCode}}"
          title-width='60px' data-name="code" type="textarea" autosize />
      </van-cell-group>
    </view>

    <!-- <view class="sub-btn" bindtap="onSub">
      <button type="default" plain>提交</button>
    </view> -->
  </view>

  <van-dialog id="van-dialog" />


  <view class="jump-btn">
    <button class="mini-btn" type="warn" plain size="mini" bindtap="onSubAdd">新增提交</button>
    <button class="mini-btn" type="warn" plain size="mini" bindtap="onSubChange">修改提交</button>
