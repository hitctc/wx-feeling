/* pages/users/index.wxss */
.container {
  width: 100%;
  height: 100%;
  min-height: 100vh;
  background-color: #F8F8F8;

  position: relative;

  box-sizing: border-box;
  padding-top: 20rpx;
}

.container .header {
  position: relative;
  width: 100%;
  min-height: 140rpx;
  overflow: hidden;
  font-size: 0;

  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;

  padding: 0 40rpx;

  /* 蓝色的渐变色 */
  /* background: linear-gradient(90deg, #005C97, #1CB5E0, #f1f1f1); */
}

.header .user-info {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;

  position: relative;
  border: 10rpx solor #fff;
}

.user-info .user-icon {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border: 10rpx solor #fff;
  margin: 10rpx;

  overflow: hidden;
  border-radius: 50%;
}

.user-info .avatar-bg {
  position: absolute;
  top: 0;
  width: 120rpx;
  height: 120rpx;
  border: 10rpx solid #fff;
  border-radius: 50%;
}

.header .user-name {
  flex: 1;
  font-size: 36rpx;
  font-weight: 600;
  color: #071529;
  margin-left: 12rpx;
  text-align: left;
  width: auto;
}

.user-name .level {
  font-size: 24rpx;
  font-weight: 400;
}

.header .login-btn-box .btn-styl {
  font-weight: bold;
  border: 4rpx solid #000;
}

.container .main {
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 32rpx;

  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.main .shadow-styl {
  width: 328rpx;
  height: 100rpx;
  box-shadow: 0rpx 0rpx 20rpx #999;
  box-shadow: 0px 4rpx 20rpx 0 rgba(0, 0, 0, 0.2);
  border-radius: 32px;

  box-sizing: border-box;
  display: flex;
  align-items: center;
  /* box-shadow: 0px 1px 4px #203A43, 0px 0px 20px #2C5364 inset; */
  margin-top: 32rpx;

}

.main .shadow-styl:nth-of-type(2n+2) {
  background: #FFFFFF;
}

.main .shadow-styl:nth-of-type(2n+1) {
  margin-right: 30rpx;
  background: #FFFFFF;
}

.main .shadow-styl .btn-styl {
  width: 264rpx;
  height: 60rpx;
  line-height: 60rpx;
  /* box-shadow: 0rpx 2rpx 20rpx #adadad, 0rpx 0rpx 10rpx #8d8d8d inset; */
  /* box-shadow: 2rpx 6rpx 10rpx #000; */
  box-shadow: 0rpx 6rpx 10rpx 0 rgb(192, 192, 192);
  border-radius: 32px;
  font-weight: bold;
  /* text-shadow: 2rpx 2rpx 4rpx #adadad; */

  font-size: 32rpx;
  border: none;
  background-color: transparent;
  color: #071529;
}



.container .zs-pic-box {
  position: absolute;
  top: 0;
  left: 0;

  width: 750rpx;
  height: 100vh;
  background-color: rgba(17, 17, 17, 0.4);
}

.zs-pic-box .zs-pic {
  position: absolute;

  width: 680rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.zs-pic-box .close-btn {
  position: absolute;
  top: 30rpx;
  right: 40rpx;
}