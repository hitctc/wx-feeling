/* pages/users-manage/index.wxss */
.users-manage-container {
  width: 750rpx;
  min-height: 100vh;

  padding-bottom: 100rpx;
}

.users-manage-container .add-btn-box {
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 0 10rpx;

  position: fixed;
  bottom: 20rpx;
  left: 0;
}

.table {
  border: 0px solid darkgray;
}

.tr {
  display: flex;
  justify-content: space-between;
  align-items: center;

  background: #0063a5;
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #bde0f7;
}

.td {
  /* flex: 1; */
  /* width: 100%; */
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  height: 100rpx;
  font-size: 30rpx;
}

.td.handle-td {
  width: 300rpx;
}

.bg-w {
  background: #0063a5;
}

.bg-g {
  background: #6fb2df;
}

.th {
  width: 100rpx;
  color: #fff;
  display: flex;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  text-align: center;
}

.th.handle-th {
  width: 300rpx;
}

.tr .td button {
  padding: 0 20rpx;
  margin: 0 10rpx;
}