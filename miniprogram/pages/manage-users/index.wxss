/* pages/users-manage/index.wxss */
.users-manage-container {
  width: 750rpx;
  min-height: 100vh;
}



.table {
  border: 0px solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 100rpx;
  align-items: center;
}

.td {
  width: 50%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  height: 100rpx;
  font-size: 30rpx;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #6fb2df;
}

.th {
  width: 50%;
  justify-content: center;
  background: #0063a5;
  color: #fff;
  display: flex;
  height: 100rpx;
  align-items: center;
  font-size: 30rpx;
}

.tx {
  width: 160rpx;
}

.avatar {
  height: 100rpx;
}

.avatar .image {
  width: 60rpx;
  height: 60rpx;
  margin: 0 20rpx;
}

.tr .td button {
  padding: 0 20rpx;
  margin: 0 5rpx;
}